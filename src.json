{
    "menu-platform": {
        "description": "Platform configuration menu",
        "long-description": [
            "This menu allows to select desired platform, ",
            "for which application will be compiled. ",
            "Platform in theCore usually represents a MCU or ",
            "family of MCUs"
        ],

        "config-name": {
            "description": "Platform",
            "type": "enum",
            "values": ["host", "tm4c"]
        },

        "menu-tm4c": {
            "description": "TI Tiva TM4C platform configuration menu",

            "long-description": [
                "TM4C is a cheap and robust MCU from Texas instruments "
            ],

            "depends_on": "/menu-platform/config-name == 'tm4c'",

            "config-device": {
                "description": "TM4C MCU model",

                "long-description": [
                    "Only TM4C123GH6PM device is supported for now"
                ],

                "type": "enum",
                "values": [ "TM4C123GH6PM" ]
            },

            "config-console": {
                "description": "UART used for console",
                "type": "string"
            },

            "menu-timer" : {
                "description": "System timer configuration",

                "config-source": {
                    "description": "System timer source",
                    "type": "enum",
                    "values": [ "systick" ]
                },

                "config-freq": {
                    "description": "System timer frequency",
                    "type": "integer"
                },

                "config-owner": {
                    "description": "Owner of the system timer",
                    "type": "enum",
                    "values": [ "user", "thecore" ]
                },

                "config-comment": {
                    "description": "Arbitrary C++ comment for timer objects",
                    "type": "string"
                }
            },

            "menu-uart": {
                "description": "UART configuration",
                "table-uart": {
                    "description": "UART configuration table",
                    "key": "config-channel",
                    "items": {
                        "config-channel": {
                            "type": "enum",
                            "values": [ "UART0", "UART1" ],
                            "description": "Enabled UART periphery",
                            "single": false
                        },
                        "config-baud": {
                            "description": "UART baud rate",
                            "type": "enum",
                            "default": 115200,
                            "values": [ 115200, 9600 ]
                        },
                        "config-alias": {
                            "description": "Driver C++ alias",
                            "type": "string"
                        },
                        "config-comment": {
                            "description": "Arbitrary driver C++ comment",
                            "type": "string"
                        }
                    },

                    "items-UART0": {
                        "config-pin-rx": {
                            "description": "UART0 RX pin",
                            "type": "enum",
                            "values": [ "PA0" ]
                        },
                        "config-pin-tx": {
                            "description": "UART0 TX pin",
                            "type": "enum",
                            "values": [ "PA1" ]
                        }
                    },

                    "items-UART1": {
                        "config-pin-rx": {
                            "description": "UART1 RX pin",
                            "type": "enum",
                            "values": [ "PB0", "PC4" ]
                        },
                        "config-pin-tx": {
                            "description": "UART1 TX pin",
                            "type": "enum",
                            "values": [ "PB1", "PC5" ]
                        }
                    }
                }
            }
        }
    }
}