{
    "menu-platform": {
        "description": "Platform configuration menu",
        "long-description": [
            "This menu allows to select desired platform, ",
            "for which application will be compiled. ",
            "Platform in theCore usually represents a MCU or ",
            "family of MCUs"
        ],

        "config-name": {
            "description": "Platform",
            "long-description": [
                "List of platform types (or microcontrollers, in other words)",
                "supported by theCore"
            ],

            "type": "enum",
            "values": ["host", "tm4c"],
            "config-class": "test-class"
        },

        "include-platform": {
            "ref": "./platform.json",
            "depends_on": "/menu-platform/config-name == 'tm4c'"
        },

        "config-test": {
            "description": "test for UART",
            "type": "enum",
            "values-from": "uart-channel"
        },

        "config-test2": {
            "description": "test for name",
            "type": "enum",
            "values-from": "test-class"
        }
    }
}